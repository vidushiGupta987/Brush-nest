<div class="container">
    <h1>EDIT POST</h1>
    <form action="/editingPost/{{post._id}}?_method=PUT" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input type="text" name="title" class="form-control" value="{{post.title}}" placeholder="Add Title">
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    <textarea type="text" name="body" class="form-control" placeholder="Type something...">{{post.body}}</textarea>
  </div>
  <div class="form-group">
      <label for="status">Want to share this with other users? </label>
      <select name="status">
          <option value="public" >Public</option>
          <option value="private">Private</option>
      </select>
  </div>
  <div class="form-check">
    <input type="checkbox" name="allowComments" class="form-check-input" id="checkbox">
    <label class="form-check-label" for="checkbox">Allow comment</label>
  </div>
  <button type="submit" class="btn btn-primary">SAVE CHANGES</button>
</form>
</div>