<div class="container">
   <div class="row">
     <div class="col-sm-4">
        <div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{user.image}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{user.fullname}}</h5>
  </div>
</div>
     </div>
     <div class="col-sm-4">
  <h1>Profile</h1>
  <p>Firstname: <span class="red">{{user.firstname}}</span></p>
   <p>Lastname: <span class="red">{{user.lastname}}</span></p>
    <p>Email: <span class="red">{{user.email}}</span></p>
  {{#if user.location}}
  <p>Location: <span class="red">{{user.location}}</span></p>
  {{else}}
<p class="location-user"><span class="red">Location: The user has not added the location</span></p>
</div>
{{/if}}
   </div>
 </div>